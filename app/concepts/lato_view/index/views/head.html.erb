<% if(@head and !@head.nil?) %>
  <thead>
    <tr>
      <% @head.each do |title| %>
        <th><%=raw title %></th>
      <% end %>
      <% if @show_link || @edit_link || @delete_link %>
        <th class="actions"><%= VIEW_LANG['index']['actions'] %></th>
      <% end %>
    </tr>
  </thead>
<% end %>
