<div class="form-control <%= @width %>" <%= required_data_input %>>
  <label class="form-label"><%= @label %></label>
	<% @options.each_with_index do |option, index| %>
  	<div class="form-block">
  		<input type="radio" class="radio <%= @custom_class %>" <%= disabled_data_input %> name="<%= @name %>" value="<%= option_value(option) %>" id="<%= @name %>-<%= index %>" <% if @value %>checked <% end %>>
  		<label class="label-control" for="<%= @name %>-<%= index %>"><%= option_name(option) %></label>
  	</div>
	<% end %>
  <div class="input-error-message"></div>
</div>
