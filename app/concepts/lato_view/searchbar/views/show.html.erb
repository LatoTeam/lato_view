<% blocco = view(:block).new() %>
<%= raw blocco.open() %>
<div class="action-bar">
  <div class="action-group-left">
    <h1 class="admin-section-title">Ricerca</h1>
  </div>
  <div class="action-group-right">
	<%= search_form_for @q do |f| %>

	  <%= f.search_field send(@filter) %>

	  <%= f.submit %>
	<% end %>
  </div>
</div>
<%= raw blocco.close() %>